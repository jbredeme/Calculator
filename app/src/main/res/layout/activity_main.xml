<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#212121"
    tools:context="com.example.jarid.cs399calculator.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout">

        <TextView style="@style/dark_ninja_pizza_textview"
            android:text="0"
            android:id="@+id/textOutput"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            tools:layout_width="match_parent" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="C"
            android:id="@+id/buttonKeyClear"
            android:layout_row="1"
            android:layout_column="0" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="/"
            android:id="@+id/buttonKeyDivide"
            android:layout_row="1"
            android:layout_column="1" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="*"
            android:id="@+id/buttonKeyMultiply"
            android:layout_row="1"
            android:layout_column="2" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="-"
            android:id="@+id/buttonKeySubtraction"
            android:layout_row="1"
            android:layout_column="3" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="7"
            android:id="@+id/buttonKey7"
            android:layout_row="2"
            android:layout_column="0" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="8"
            android:id="@+id/buttonKey8"
            android:layout_row="2"
            android:layout_column="1" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="9"
            android:id="@+id/buttonKey9"
            android:layout_row="2"
            android:layout_column="2" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="144dp"
            android:id="@+id/buttonKeyAddition"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_rowSpan="2"/>

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="4"
            android:id="@+id/buttonKey4"
            android:layout_row="3"
            android:layout_column="0" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="5"
            android:id="@+id/buttonKey5"
            android:layout_row="3"
            android:layout_column="1" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="6"
            android:id="@+id/buttonKey6"
            android:layout_row="3"
            android:layout_column="2" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="1"
            android:id="@+id/buttonKey1"
            android:layout_row="4"
            android:layout_column="0" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="2"
            android:id="@+id/buttonKey2"
            android:layout_row="4"
            android:layout_column="1" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="3"
            android:id="@+id/buttonKey3"
            android:layout_row="4"
            android:layout_column="2" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="0"
            android:layout_width="176dp"
            android:id="@+id/buttonKey0"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="."
            android:id="@+id/buttonKeyPeriod"
            android:layout_row="5"
            android:layout_column="2" />

        <Button style="@style/dark_ninja_pizza_buttons"
            android:text="="
            android:layout_height="144dp"
            android:id="@+id/buttonKeyEquals"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_rowSpan="2"/>

    </GridLayout>
</RelativeLayout>
